<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slavyanin.example.checkpoint">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".checkpoint.Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".checkpoint2.MainActivity"></activity>
        <activity android:name=".checkpoint2.AddActivity"></activity>
        <activity android:name=".checkpoint2.CatalogActivity"></activity>
        <activity android:name=".checkpoint2.EditActivityEdit"></activity>
        <activity android:name=".checkpoint2.EditActivityView"></activity>
        <activity android:name=".checkpoint2.RemoveActivity"></activity>
        <activity android:name=".checkpoint2.FindActivity"></activity>

    </application>

</manifest>
